<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F5DEB3"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDBE70" >

        <Button
            android:id="@+id/btn_change_UserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#8B658B"
            android:text="修改" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_change_UserInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#8B658B"
            android:text="返回" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="学号" />
        <TextView
            android:id="@+id/tv_User_Id"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="姓名" />
	<EditText 
            android:id="@+id/Et_User_Name"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="性别" />
	<EditText 
            android:id="@+id/Et_User_Sex"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="学院" />
	<EditText 
            android:id="@+id/Et_User_Col"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="电话" />
	<EditText 
            android:id="@+id/Et_User_Pho"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="喜好" />
	<EditText 
            android:id="@+id/Et_User_Like"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_change_User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出账号" />

</LinearLayout>
</ScrollView>